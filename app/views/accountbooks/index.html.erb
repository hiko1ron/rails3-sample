<h1>Listing accountbooks</h1>


Total <%= @accountbooks_count %> records. Spent <%= @accountbooks_sum %> yen. 
<table>
  <tr>
    <th>ID</th>
    <th>Subject</th>
    <th>Price</th>
    <th>Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<!--
<%= debug @accountbooks %>
-->
<% @accountbooks.each do |accountbook| %>
  <tr>
    <td><%= accountbook.id %></td>
    <td><%= accountbook.subject %></td>
    <td><%= accountbook.price %></td>
    <td><%= accountbook.date %></td>
    <td><%= link_to 'Show', accountbook %></td>
    <td><%= link_to 'Edit', edit_accountbook_path(accountbook) %></td>
    <td><%= link_to 'Destroy', accountbook, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

